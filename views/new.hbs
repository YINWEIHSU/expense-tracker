<form class="container mx-5" action="/expenses" method="POST">
  <button class="btn btn-success" type="">收入</button>
  <button class="btn btn-success" type="">支出</button>
  <div class="input-group row">
    <h3 class="col-12 mb-5" style="text-align: center;"><strong>請輸入支出內容</strong></h3>
    <label class="form-label col-4 my-4" for="expense-name">支出名稱</label>
    <input class="col-8 my-4" type="text" placeholder="請輸入項目名稱" id="expense-name" name="name" value="" required>
    <label class="form-label col-4 my-4" for="expense-category">支出類別</label>
    <select class="form-select col-8 my-4" name="category" id="expense-category" required>
      <option selected disabled value="">Choose...</option>
      <option>生活</option>
      <option>交通</option>
      <option>娛樂</option>
      <option>飲食</option>
      <option>其他</option>
    </select>
    <label class="form-label col-4 my-4" for="expense-amount">支出金額</label>
    <input class="col-8 my-4" type="text" placeholder="請輸入金額" id="expense-amount" name="amount" value="" required>
    <label class="form-label col-4 my-4" for="expense-date">日期</label>
    <input class="col-8 my-4" type="date" placeholder="date" id="expense-date" name="date" value="" required>
    <label class="form-label col-4 my-4" for="expense-date">商家</label>
    <input class="col-8 my-4" type="text" placeholder="請輸入商家" id="merchant" name="merchant" value="">
    <div class="col-12 my-4 d-flex justify-content-between">
      <button class="btn btn-success" type="submit">Create</button>
      <a class="btn btn-dark" href="/"><i class="fas fa-chevron-left"></i> Back</a>
    </div>
  </div>
</form>