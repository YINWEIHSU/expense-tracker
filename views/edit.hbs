<form action="/expenses/{{ expense._id }}?_method=PUT" method="POST">
  <div class="input-group">
  <label class="form-label" for="expense-name">支出名稱</label>
  <input type="text" placeholder="請輸入項目名稱" id="expense-name" name="name" value="{{ expense.name }}">
  <label class="form-label" for="expense-category">支出類別</label>
   <select class="form-select" name="category" id="expense-category">
    <option selected disabled>Choose...</option>
    <option {{#ifEquals expense.category '生活'}}selected{{/ifEquals}}>生活</option>
    <option {{#ifEquals expense.category '交通'}}selected{{/ifEquals}}>交通</option>
    <option {{#ifEquals expense.category '娛樂'}}selected{{/ifEquals}}>娛樂</option>
    <option {{#ifEquals expense.category '飲食'}}selected{{/ifEquals}}>飲食</option>
    <option {{#ifEquals expense.category '其他'}}selected{{/ifEquals}}>其他</option>
  </select>
  <label class="form-label" for="expense-amount">支出金額</label>
  <input type="text" placeholder="請輸入項目金額" id="expense-amount" name="amount" value="{{ expense.amount }}">
  <label class="form-label" for="expense-date">日期</label>
  <input type="date" placeholder="date" id="expense-date" name="date" value="{{ expense.date }}">
  <button type="submit">Save</button>
  <a href="/">back</a>
  </div>
</form>